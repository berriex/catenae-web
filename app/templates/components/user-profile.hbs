
{{#if isLogged}}
  <div class="navbar-form navbar-right">
    <div class="form-group">
      <a class="btn btn-block btn-danger" {{action "logout"}}>
        <span class="fa"></span> Logout
      </a>
    </div>
  </div>
{{else}}
  <div class="navbar-form navbar-right">
    <div class="form-group">
      <a class="btn btn-block btn-social btn-github" {{action "loginWithGithub"}}>
        <span class="fa fa-github"></span>
        Sign in with Github
      </a>
    </div>
    <div class="form-group">
      <a class="btn btn-block btn-social btn-google" {{action "loginWithGoogle"}}>
        <span class="fa fa-google"></span> Sign in with Google
      </a>
    </div>
  </div>
{{/if}}
{{yield}}
